<!-- This serves as the header -->
<!-- Also implements bootstrap 4.4.1 -->
<!DOCTYPE html>

<html>
    <head>
        <title>Accomodate</title>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
        <link rel="stylesheet" href="/stylesheets/main.css">
    </head>
    <body>

    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <a id="brand" class="navbar-brand" href="/">Accomodate</a>
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav navbar-left">
                    <li><a href="/accomodations">Accomodations</a></li>
                    <li><a href="/">About</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <!-- displays logout if user is signed in, else only displays login/register -->
                    <% if(!currentUser){ %>
                        <li><a href="/login">Login</a></li>
                        <li><a href="/register">Sign Up</a></li>
                    <% } else { %>
                        <li><a href="#">Signed in as: <%= currentUser.username %></a></li>
                        <li><a href="/logout">Log Out</a></li>
                    <% } %>
                </ul>
            </div>
        </div>
    </nav>
