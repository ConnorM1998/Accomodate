<!-- Adds header to page -->
<%- include("../partials/header") %>

<div class="container">
    <div class="row">
        <h1 style = "text-align: center;">Add a New Comment to <%= accomodation.name%></h1>
        <div style="width: 30%; margin: 30px auto;">
            <!-- Links back to "/accomodations" POST route in "app.js" -->
            <!-- Recieves data and adds to accomodations array-->
            <form action="/accomodations/<%= accomodation._id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="text">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/accomodations">Current Accomodations</a>
        </div>
    </div>
</div>


<%- include("../partials/footer") %>