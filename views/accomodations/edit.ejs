<!-- Adds header to page -->
<%- include("../partials/header") %>

<div class="container">
    <div class="row">

        <h1 style = "text-align: center;">EDIT <%= accomodation.name%></h1>
        <div style="width: 30%; margin: 30px auto;">
            <!-- Links back to "/accomodations" POST route in "app.js" -->
            <!-- Recieves data and adds to accomodations array-->
            <form action="/accomodations/<%=accomodation._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="accomodation[name]" value="<%= accomodation.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control"type="text" name="accomodation[image]" value="<%= accomodation.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control"type="number" name="accomodation[price]" value="<%= accomodation.price %>" step="10.0" min="0" required>
                </div>
                <div class="form-group">
                    <input class="form-control"type="text" name="accomodation[description]" value="<%= accomodation.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/accomodations">Current Accomodations</a>
        </div>
    </div>
</div>


<%- include("../partials/footer") %>