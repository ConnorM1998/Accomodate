<!-- This class handles the index pages, which dispays a brief thumbnail
     of all the accomodations, aswell as the option to add a new accomodation -->

<!-- Adds header to page -->
<%- include("../partials/header") %>

<div class="container">
    <!-- creates a header container -->
    <header class="jumbotron">
        <!-- Container ensures text is not squished on resize -->
        <div class="container">
        <h1>Accommodations Page</h1>
        <p>Here are all the accommodations from all around World!</p>
        <p>
            <!-- Button that routes user to "/accomodations/new" -->
            <a class="btn btn-success btn-lg" href="/accomodations/new">Add new Accommodation</a>
        </p>
        </div>
    </header>

    <!-- ////////////// -->
    <div class="row">
        <div class="col-lg-12">
            <h3>Submitted Accommodations:</h3>
        </div> 
    </div>
<!-- ////////////// -->

    <!-- Handles styling accomodation display (text, grid, etc) -->
    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <!-- Allows the accomodations specified in app.js to be displayed -->
        <% accomodations.forEach(function(accomodation){ %>
            <div class="col-md-3 col-sm-6">
                <div class ="thumbnail">
                    <img src="<%= accomodation.image %>">
                    <div class-"caption">
                        <h4><%= accomodation.name %></h4>
                    </div>
                    <p>
                        <!-- Button that routes to "more info" of specified accomodations ID, which is generated by mongoDB -->
                        <a href="/accomodations/<%= accomodation._id %>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
        <% }) %>

        </div>
    </div>
<!-- Adds footer to page -->


<%- include("../partials/footer") %>